$wk-button-wishlist-page-icon-size: 18px;

/* -- Clear wishlist button (on wishlist page) -- */
$wk-button-wishlist-clear-background: #03a196;
$wk-button-wishlist-clear-text-color: #ffffff;
$wk-button-wishlist-clear-background-hover: #04736b;
