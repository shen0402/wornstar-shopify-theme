.owl-carousel .owl-item h4 {
  text-align: center;
  margin-bottom: 0px;
 }

.owl-item  {
  padding : 0px;
 }

.owl-carousel .owl-item a {
  text-decoration: none;
  color: inherit;
}

.owl-carousel .owl-item a:visited {
  text-decoration: none;
  color: inherit;
}

#related_products_slider .owl-item img {
    object-fit: scale-down;
    height: 96%;
    width: 96%;
    vertical-align: middle;
    padding: 0px;
}


#related_articles_slider .owl-item img {
    object-fit: cover;
    height: 96%;
    width: 96%;
    vertical-align: middle;
    padding: 0px;
}

#related_product_articles_slider .owl-item img { 
  object-fit: cover; 
  height: 96%; 
  width: 96%; 
  vertical-align: middle; 
  padding: 0px; 
}

.carousel-image-wrapper { 
  width: 100%; 
  vertical-align: middle; 
  text-align: center; 
  height: 300px; 
  
  @media screen and (min-width: 769px) {
    height: 200px; 
  }
  
}

.carousel-text-wrapper {
  margin-top: 2px;
  text-align: center; 
  
  .spr-badge-caption {
    font-size: 8px;
  }
}

.carousel-text-price {
  text-align: center; 
  margin-top: 4px;
  font-size: 16px;
  margin-bottom: 4px;
}

.carousel-text-vendor {
  text-align: center; 
  padding-top: 4px;
  padding-bottom: 4px;
  font-size: 14px;
}

.carousel-text-excerpt {
  text-align: center; 
}
