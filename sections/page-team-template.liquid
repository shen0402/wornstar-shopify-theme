        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job title",
          "default": "Fancy job title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Powered by cats and coffee.</p>"
        },
        {
          "type": "text",
          "id": "twitter",
          "label": "Twitter handle",
          "default": "Shopify"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
