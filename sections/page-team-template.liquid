    {
      "type": "select",
      "id": "text_position",
      "label": "Text alignment",
      "default": "center",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Employees"
    },
    {
      "type": "range",
      "id": "employee_per_row",
      "label": "Images per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "color",
      "id": "member_color",
      "label": "Text",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "member_accent_color",
      "label": "Accent",
      "default": "#d54d4d"
    },
    {
      "type": "color",
      "id": "member_overlay_color",
      "label": "Overlay",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "name": "Employee",
      "type": "employee",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "800 x 800px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Name",
