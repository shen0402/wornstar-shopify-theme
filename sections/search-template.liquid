<script
  type="application/json"
  data-section-type="search-template"
  data-section-id="{{ section.id }}"
>
</script>

{% liquid
  assign banner_title = 'general.search.title' | t
  assign mobile_crop = 'mobile-banner--crop-' | append: section.settings.mobile_image_crop

  assign has_faceted_filtering_block = false
  assign faceted_filtering_blocks_count = section.blocks | where: "type", "faceted_filtering" | size
  if faceted_filtering_blocks_count > 0
    assign has_faceted_filtering_block = true
  endif
%}

{% paginate search.results by section.settings.pagination_limit %}
  {% if section.settings.image != blank %}
    {%
      render 'template-banner',
      image: section.settings.image,
      mobile_image: section.settings.mobile_image,
      background_style: section.settings.caption_content_background,
      mobile_crop: mobile_crop,
      wide_display: section.settings.wide_display,
      banner_title: banner_title,
      show_caption: true
    %}
  {% endif %}

  <section class="section">
    <div class="container content">
      <div class="one-whole column">
        <div class="breadcrumb-collection">
          {% if section.settings.search_breadcrumb %}
            <script type="application/ld+json">
              {
                "@context": "https://schema.org",
                "@type": "BreadcrumbList",
                "itemListElement": [
                  {
                    "@type": "ListItem",
                    "position": 1,
                    "item": {
                      "@id": "{{ shop.url }}",
                      "name": "{{ 'general.breadcrumbs.home' | t }}"
                  }
                },
                {
                  "@type": "ListItem",
                  "position": 2,
                  "item": {
                    "@id": "{{ routes.search_url }}",
                    "name": "{{ 'general.search.title' | t }}"
                  }
                }
              ]
            }
          </script>

          <div class="breadcrumb_text">
            <a href="{{ routes.root_url }}" title="{{ shop.name | escape }}" class="breadcrumb_link">
              <span>{{ 'general.breadcrumbs.home' | t }}</span>
            </a>

            <span class="breadcrumb-divider">/</span>

            <a href="{{ routes.search_url }}" class="breadcrumb_link">
              <span>{{ 'general.search.title' | t }}</span>
            </a>

            {% if paginate.pages != 0 and settings.pagination_type == 'basic_pagination' %}
              <span class="breadcrumb-divider">/</span> {{ 'general.breadcrumbs.page' | t: current_page: paginate.current_page, pages: paginate.pages }}
            {% endif %}
          </div>
        {% endif %}
        </div>
      </div>

      {% if section.settings.image == blank %}
        <div class="one-whole column">
          <h1>{{ 'general.search.title' | t }}</h1>
          <div class="feature-divider"></div>
        </div>
      {% endif %}

      {% comment %} Check to see if sidebar should be enabled {% endcomment %}
      {% if section.blocks.size > 0 %}
        {% assign sidebar = true %}
      {% else %}
        {% assign sidebar = false %}
      {% endif %}

      <div
        class="
          content-wrapper
          is-flex
          is-flex-wrap
        "
      >
        {%
          render 'sidebar',
          results: search,
          has_faceted_filtering_block: has_faceted_filtering_block,
        %}

        <div class="has-sidebar-option sidebar-enabled--{{ sidebar }}">
          <div class="container">
            {% if search.performed %}
              {% if search.results == empty %}
                <div class="one-whole column">
                  <div class="search_page text-align--center">
                    <div class="center">
                      <h3>{{ 'general.search.no_results' | t: terms: search.terms }}</h3>
                    </div>

                    <br />

                    {%
                      render 'search-form',
                      search_term: section.settings.search_term
                    %}
                  </div>
                </div>
              {% else %}
                {% if settings.search_option == 'product,page,article' or search.results.first.price == blank %}
                  <div class="one-whole column">
                    <div class="product-list product-list--search" {% if settings.pagination_type == 'load_more_button' %}data-load-more--grid{% endif %}>
                      {% for item in search.results %}
                        <div class="product_row is-flex is-flex-wrap equal-columns--outside-trim" {% if settings.pagination_type == 'load_more_button' %}data-load-more--grid-item{% endif %}>
                          {%- assign featured_image = false -%}

                          {% if item.object_type == 'article' and item.image %}
                            {%- assign featured_image = true -%}

                            <div class="one-fourth column">
                              <a href="{{ item.url }}" title="{{ item.title | escape }}">
                                {%
                                  render 'image-element',
                                  image: item.image,
                                  alt: item.title,
                                  object_fit: settings.align_height,
                                  max_height: settings.collection_height
                                %}
                              </a>
                            </div>
                          {% elsif item.featured_image %}
                            {%- assign featured_image = true -%}

                            <div class="one-fourth column">
                              <a href="{{ item.url }}" title="{{ item.title | escape }}">
                                {%
                                  render 'image-element',
                                  image: item.featured_image,
                                  alt: item.title,
                                  object_fit: settings.align_height,
                                  max_height: settings.collection_height
                                %}
                              </a>
                            </div>
                          {% endif %}

                          <div class="{% if featured_image %}three-fourths columns{% else %}one-whole column{% endif %} align_left">
                            <h5 class="sub_title">
                              <a href="{{ item.url }}" title="{{ item.title | escape }}">{{ item.title }}</a>
                            </h5>

                            {% if item.price %}
                              <div class="info">
                                {% unless settings.display_price == false and item.available == false %}
                                  <span class="price">
                                    {% if item.compare_at_price_max > item.price %}
                                      <span class="was_price">
                                        <span class="money">
                                          {%
                                            render 'price-element',
                                            price: item.compare_at_price_max
                                          %}
                                        </span>
                                      </span>
                                    {% endif %}

                                    {% if item.price_varies %}
                                      {% if item.compare_at_price_max > item.price %}
                                        <br />
                                      {% endif %}

                                      <small>
                                        <em>{{ 'products.general.from' | t }}</em>
                                      </small>
                                    {% endif %}

                                    <span class="money">
                                      {%
                                        render 'price-element',
                                        price: item.price_min
                                      %}
                                    </span>
                                  </span>
                                {% endunless %}

                                {% if item.available == false %}
                                  <span class="sold-out-text">{{ 'products.product.sold_out' | t }}</span>
                                {% endif %}
                              </div>
                            {% endif %}

                            {% if item.object_type == 'article' %}
                              <p class="blog_meta">
                                {% if section.settings.blog_author %}
                                  <span>{{ 'blogs.article.by_author' | t: author: item.author }}</span>
                                {% endif %}

                                {% if section.settings.blog_date %}
                                  <span>{{ item.published_at | date: format: "month_day_year" }}</span>
                                {% endif %}
                              </p>
                            {% endif %}

                            {% if item.excerpt %}
                              <div class="excerpt">{{ item.excerpt }}</div>

                              {% if section.settings.read_more_link %}
                                <p>
                                  <a href="{{ item.url }}" title="{{ item.title | escape }}">{{ 'blogs.general.continue_reading_html' | t }} <span class="icon-right-arrow"></span></a>
                                </p>
                              {% endif %}
                            {% else %}
                              <p>
                                {{ item.content | strip_html | truncatewords: 40 | highlight: search.terms | replace: 'Description', '' | replace: 'Specs', '' | replace: 'Shipping', '' | replace: 'Size', '' }}
                              </p>
                            {% endif %}
                          </div>
                        </div>
                      {% endfor %}

                      {% if settings.pagination_type != 'basic_pagination' %}
                        {% if paginate.next.url %}
                          <span class="js-load-more load-more">
                            <a href="{{ paginate.next.url }}" data-no-instant data-load-more class="global-button global-button--text">{{ 'general.search.load_more' | t }}</a>
                          </span>
                        {% endif %}
                      {% endif %}
                    </div>

                    <div class="load-more__icon"></div>
                  </div>
                </div>
              {% else %}
                <div class="one-whole column">
                  {%- assign products = search.results -%}
                  {%
                    render 'product-loop',
                    products: products,
                    skip_product: product,
                    products_per_row: section.settings.products_per_row,
                    sidebar: sidebar,
                    paginate: paginate,
                  %}
                </div>
              {% endif %}
            {% endif %}
          {% else %}
            <div class="one-whole column">
              <div class="search_page text-align--center">
                <div class="center">
                  <h3>{{ 'general.search.description' | t }}</h3>
                </div>
                <br />
                {% render 'search-form' %}
              </div>
            </div>
          {% endif %}

          {% unless settings.pagination_type != 'basic_pagination' %}
            {%
              render 'pagination',
              paginate: paginate
            %}
          {% endunless %}
        </div>
      </div>
    </div>
  </section>
{% endpaginate %}

{% schema %}
{
