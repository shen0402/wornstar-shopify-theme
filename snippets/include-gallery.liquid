<section class="section {% if block.settings.wide_display == false %}is-width-standard{% else %}is-width-wide has-no-side-gutter{% endif %}">
  <div class="container">
    <div class="one-third column thumbnail gallery-image-wrapper">
        {% if block.settings.detail_image_1 != blank %}
          <div class="gallery-cell">
            <a  href="{{ block.settings.detail_image_1 |  img_url: '2000x' }}"
                class="gallery gallery-{{ section.id }}"
                data-fancybox="{{ block.id }}"
                data-caption="{{ block.settings.caption }}"
                data-width="{{ block.settings.detail_image_1.width }}"
                data-height="{{ block.settings.detail_image_1.height }}"
                data-srcset="{{ block.settings.detail_image_1 |  img_url: '1600x' }} 1600w, {{ block.settings.detail_image_1 |  img_url: '1200x' }} 1200w, {{ block.settings.detail_image_1 |  img_url: '640x' }} 640w"
                rel="gallery">
              {% render 'image-element',
                      image: block.settings.detail_image_1,
                      alt: block.settings.detail_image_1.alt
              %}
            </a>
          </div>
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
