<div class="js-newsletter-popup">
  <div class="newsletter-popup {% if settings.newsletter_bg != blank %}newsletter-image--true{% else %}newsletter-image--false{% endif %} align-{{ settings.newsletter_popup_image_align }} {% if settings.display_first_name and settings.display_last_name %}newsletter-both-names--true{% else %}newsletter-both-names--false{% endif %} object-fit--{{ settings.image_crop }}">
    {% if settings.newsletter_bg != blank %}
      <div class="newsletter-img image-crop--{{ settings.image_crop }}">
        <img src="{{ settings.newsletter_bg | img_url: '600x' }}" alt="{% if settings.newsletter_bg.alt != blank %}{{ settings.newsletter_bg.alt }}{% else %}{{ settings.newsletter_popup_title | escape }}{% endif %}" class="lazyload {{ settings.image_loading_style }}" />
      </div>
    {% endif %}

    <div class="newsletter-popup__content">
      <div class="newsletter-info">
        <div class="newsletter-description">
          <h2>{{ settings.newsletter_popup_title }}</h2>
          <div>{{ settings.newsletter_popup_text }}</div>

          {% if settings.popup_button1 != blank or settings.popup_button2 != blank %}
            <div class="newsletter-buttons">
              {% if settings.popup_button1 != blank %}
                <a
                  {% if settings.popup_button1_link != blank %}
                    href="{{ settings.popup_button1_link }}"
                  {% else %}
                    data-fancybox-close
                  {% endif %}
                  class="
                    global-button
                    newsletter-popup__button
                    {% if settings.popup_button1_highlight %}
                      newsletter-popup__button--highlighted
                    {% else %}
                      newsletter-popup__button--text
                    {% endif %}
                  "
                >
                  {{ settings.popup_button1 }}
                </a>
              {% endif %}

              {% if settings.popup_button2 != blank %}
                <a
                  {% if settings.popup_button2_link != blank %}
                    href="{{ settings.popup_button2_link }}"
                  {% else %}
                    data-fancybox-close
                  {% endif %}
                  class="
                    global-button
                    newsletter-popup__button
                    {% if settings.popup_button2_highlight %}
                      newsletter-popup__button--highlighted
                    {% else %}
                      newsletter-popup__button--text
                    {% endif %}
                  "
                >
                  {{ settings.popup_button2 }}
                </a>
              {% endif %}
            </div>
          {% endif %}

          {% render 'newsletter-form' %}
        </div>
      </div>
    </div>
  </div>
</div>
